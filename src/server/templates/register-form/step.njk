{% extends 'layouts/base.njk' %}

{% block body_main_content %}
  <div class="page-section">
    {% component 'error-summary', { children: stepErrors } %}

    <h1 class="form-title">{{ title }}</h1>

    <form method="post">
      <input type="hidden" name="csrf" value="{{csrf}}">

      {% if beforeTemplate %}
        {% include beforeTemplate %}
      {% endif %}

      {% for field in fields %}
        {% if field.componentType in ['textbox', 'multiple-choice'] %}
          {% component 'form-' + field.componentType, {
            label: field.label,
            name: field.id,
            children: field.children,
            variant: field.variant,
            error: stepErrors[field.id].message | replace(stepErrors[field.id].label, ""),
            value: stepData[field.id]
          } %}
        {% endif %}
      {% endfor %}

      {% if stepData.keys() == 'email' %}
        <details>
          <summary>
            <span class="details__summary">Why should I provide an email address?</span>
          </summary>

          <div class="details__content">
            <div class="callout callout--info">
              <p>{{ CURRENT_PRACTICE.name }} may need to get in touch with you to complete your registration.</p>
            </div>
          </div>
        </details>
      {% endif %}

      <div class="form-group">
        <button type="submit" class="button">Continue</button>
        {% if prevStep %}
          <a href="{{ prevStep }}" class="button button--back">Back</a>
        {% endif %}
      </div>

    </form>
  </div>
{% endblock body_main_content %}
