    "node": ">=7.0.0 <8.0.0"
  },
  "dependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "blipp": "^2.3.0",
    "dotenv": "^4.0.0",
    "eclint": "^1.1.5",
    "glue": "^4.1.0",
    "good": "^7.1.0",
    "good-console": "6.2.0",
    "good-squeeze": "^5.0.1",
    "hapi": "^16.1.0",
    "inert": "^4.1.0",
    "node-sass": "^4.5.0",
    "npm-run-all": "^4.0.1",
    "nunjucks": "^3.0.0",
    "vision": "^4.1.1",
    "yar": "^8.1.2"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-plugin-transform-async-to-generator": "^6.22.0",
    "babel-preset-es2017": "^6.22.0",
    "babel-preset-modern-node": "^3.2.0",
    "babel-preset-stage-3": "^6.22.0",
    "css-loader": "^0.26.1",
    "eslint": "^3.15.0",
    "extract-text-webpack-plugin": "beta",
    "jest": "^18.1.0",
    "node-sass": "^4.5.0",
    "nodemon": "^1.11.0",
    "random-port": "^0.1.0",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.1.1",
    "style-loader": "^0.13.1",
    "webpack": "beta",
    "webpack-dev-middleware": "^1.9.0",
    "webpack-hot-middleware": "^2.15.0"
  },
  "scripts": {
    "test": "jest",
    "dev": "nodemon --exec babel-node --watch src/server/ src/server/index.js",
    "prebuild": "npm rebuild node-sass",
    "build": "webpack --config src/client/webpack.config.babel.js && babel src -d dist --copy-files --source-maps",
    "lint:eslint": "DEBUG=eslint:cli-engine eslint .",
    "lint:editorconfig": "eclint check src/** README.md",
    "lint": "npm-run-all --parallel lint:*",
    "clean": "rimraf dist/ coverage/ src/client/compiled",
    "start": "node ./dist/server/"
  },
  "jest": {
    "collectCoverage": true,
    "rootDir": "src",
    "coverageDirectory": "coverage"
  },
  "babel": {
    "presets": [
      "modern-node",
      "es2017",
      "stage-3"
    ]
  },
  "pre-commit": [
    "test",
    "lint"
  ]
}
